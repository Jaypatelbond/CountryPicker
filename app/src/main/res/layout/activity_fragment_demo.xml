<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FragmentDemoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragment Implementation"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Three ways to filter countries"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Card 1: All Countries -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAllCountries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ Scenario 1: All Countries"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shows complete list of 50+ countries"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/buttonAllCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show All Countries"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Few Countries -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFewCountries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardAllCountries"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… Scenario 2: Specific Countries Only"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whitelist: Only show 7 English-speaking countries"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/buttonFewCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Selected Countries"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3: Block Countries -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBlockCountries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardFewCountries"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš« Scenario 3: Block Countries"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blacklist: Exclude 5 countries from the list"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/buttonBlockCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show with Blocked Countries"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/cardBlockCountries"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/textSelectedCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No country selected\n\nTry one of the options above!"
                android:textSize="14sp"
                android:textAlignment="center"
                android:minHeight="120dp"
                android:gravity="center"
                android:padding="20dp" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ All examples work without Compose"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/cardResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
